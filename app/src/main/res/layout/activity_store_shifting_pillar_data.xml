<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".StoreShiftingPillarDataActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!--<ImageButton
                android:id="@+id/button_close"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@android:color/white"
                app:srcCompat="@drawable/ic_close_black_24dp" />-->

            <TextView
                android:id="@+id/fbname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                android:textColor="@android:color/white"
                android:textStyle="normal"
                android:text="Shifting Pillar Detail"
                android:layout_marginLeft="15dp"
                />
            <!--<ImageButton-->
            <!--android:id="@+id/save"-->
            <!--android:layout_width="?attr/actionBarSize"-->
            <!--android:layout_height="?attr/actionBarSize"-->
            <!--android:background="?attr/selectableItemBackgroundBorderless"-->
            <!--android:tint="@android:color/white"-->
            <!--app:srcCompat="@drawable/ic_save_black_24dp" />-->
            <Button
                android:id="@+id/save"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="Save"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:scrollingCache="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="12sp"
            android:paddingTop="20sp"
            android:scrollbars="vertical">

            <LinearLayout
                android:id="@+id/li1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5sp"
                    android:layout_weight="2.5"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtslno"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Pillar No:"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:textColor="@color/color1"
                        android:textSize="20sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5sp"
                    android:layout_weight="2.5"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtpatchno"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/back"
                        android:enabled="false"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:textColor="@color/color1"
                        android:textSize="20sp"
                        android:textStyle="normal"

                        />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/li2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/li1"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="15sp"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5sp"
                    android:layout_weight="2.5"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtfbname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="FB Name:"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:textColor="@color/color1"
                        android:textSize="20sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5sp"
                    android:layout_weight="2.5"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/etfbname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/back"
                        android:enabled="false"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:textColor="@color/color1"
                        android:textSize="20sp"
                        android:textStyle="normal"

                        />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/li3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/li2"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="15sp"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5sp"
                    android:layout_weight="2.5"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtlat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:enabled="false"
                        android:text="Latitude:"
                        android:textAlignment="center"
                        android:textColor="@color/color1"
                        android:textSize="20sp"
                        android:textStyle="normal"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtlatdata"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/back"
                        android:enabled="false"
                        android:textAlignment="center"
                        android:textColor="@color/color1"
                        android:textSize="20sp"
                        android:textStyle="normal" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/li4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/li3"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="15sp"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5sp"
                    android:layout_weight="2.5"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtlongitude"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:enabled="false"
                        android:text="Longitude:"
                        android:textAlignment="center"
                        android:textColor="@color/color1"
                        android:textSize="20sp"
                        android:textStyle="normal"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtlong"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:background="@drawable/back"
                        android:enabled="false"
                        android:textAlignment="center"
                        android:textColor="@color/color1"
                        android:textSize="20sp"
                        android:textStyle="normal"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/li5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/li4"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="25sp"
                android:layout_marginRight="10sp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/remark"
                    android:layout_width="fill_parent"
                    android:layout_height="60sp"
                    android:layout_below="@+id/pc"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginBottom="10sp"
                    android:backgroundTint="@color/color1"
                    android:breakStrategy="balanced"
                    android:fitsSystemWindows="true"
                    android:gravity="top"
                    android:hint="Remark about shifting pillar"
                    android:inputType="textMultiLine"
                    android:padding="4dp"
                    android:singleLine="false" />

                <FrameLayout
                    android:layout_width="310dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/setpic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom|center_horizontal"
                        android:background="@drawable/profile"

                        />

                    <ImageView
                        android:id="@+id/takepic"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:src="@drawable/ic_photo_camera_black_24dp" />
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>